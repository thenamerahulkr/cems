# Server Configuration
PORT=5000
NODE_ENV=development

# Database
# Get your MongoDB connection string from: https://cloud.mongodb.com/
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# JWT
# Generate a secure random string (at least 32 characters)
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters_long

# Email Configuration (Gmail)
# Note: MAIL_PASS should be a Gmail App Password (16 characters, NO SPACES)
# Generate at: https://myaccount.google.com/apppasswords
MAIL_USER=your_email@gmail.com
MAIL_PASS=your_gmail_app_password_here

# Frontend URL (for CORS)
CLIENT_URL=http://localhost:3001

# Razorpay Configuration
# Get your keys from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here

# Admin Configuration (Single Admin)
# This admin will be auto-created on server start if not exists
ADMIN_EMAIL=admin@college.edu
ADMIN_PASSWORD=Admin@123456
ADMIN_NAME=System Administrator
